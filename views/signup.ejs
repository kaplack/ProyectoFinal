<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs'); %>
  <body>
    <%- include('./partials/header.ejs'); %>
    <section class="signup">
      <div class="signup__box">
        <div class="signup__box--main">
          <h1>Registro</h1>
          <div class="signup-form">
            <form action="/signup" enctype="multipart/form-data" method="post">
              <div class="formInput input">
                <input
                  type="text"
                  placeholder="Ingrese el nombre del usuario"
                  name="user"
                  id="user"
                  required
                />
              </div>
              <div class="formInput input">
                <input
                  type="text"
                  placeholder="Ingrese su direccion"
                  name="address"
                  id="address"
                  required
                />
              </div>
              <div class="formInput input">
                <input
                  type="number"
                  placeholder="Ingrese su edad"
                  name="age"
                  id="age"
                  required
                />
              </div>

              <div class="formInput input">
                <input
                  type="number"
                  placeholder="Ingrese su telefono"
                  name="phone"
                  id="phone"
                  required
                />
              </div>
              <div class="formInput input">
                <input
                  type="email"
                  placeholder="Ingrese su correo"
                  name="email"
                  id="email"
                  required
                />
              </div>
              <div class="formInput input">
                <input
                  type="password"
                  placeholder="Ingrese su contraseÃ±a"
                  name="password"
                  id="password"
                  required
                />
              </div>
              <div class="formInput input">
                <input type="file" name="avatarFile" id="avatarFile" required />
              </div>

              <button id="signup__btn">Registrar</button>
            </form>
          </div>
          <a href="/login">Ingresar</a>
        </div>
      </div>
    </section>
  </body>
</html>
